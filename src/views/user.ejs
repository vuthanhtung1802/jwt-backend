<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Document</title>
    </head>
    <body>
        <div class="user-infor-container">
            <div class="container">
                <div class="mt-3 mb-3">
                    <h3>Create a new user</h3>
                </div>
                <form class="col-6 mt-3" method="POST" action="/users/create-user">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" id="username" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input
                            type="email"
                            class="form-control"
                            name="email"
                            id="email"
                            aria-describedby="emailHelp"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="password" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <div class="table-users mt-3">
                    <h3>TABLE USERS:</h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row"><%= item.id %></th>
                                <td><%= item.email%></td>
                                <td><%= item.username%></td>
                                <td>
                                    <a class="btn btn-warning" href="/update-user/<%= item.id %>" method="GET">
                                        Edit
                                    </a>
                                    <form style="display: inline" action="/delete-user/<%= item.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
